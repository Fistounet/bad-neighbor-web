extends ../../layouts/default

block content
	.container
		
		.main
			.row
				.col.col-md-4
					if secondary
						each article, count in secondary
							if count < 4
								.article.secondary(style="background-image: url(/images/article-" + article.key + ");")
									a(href="/article/" + article.key).inner
										.title
											h3= article.publish.title
											h5= article.publish.summary

										.sub
											b #{dateformat(article.createdAt, "dd mmmm yyyy")} | #{article.stats.replies} commentaires | Posté par #{article.createdBy.username}
				
				
				.col.col-md-8
					if primary
						each article, count in primary
							if count < 2
								.article(style="background-image: url(/images/article-" + article.key + ");")
									a(href="/article/" + article.key).inner
