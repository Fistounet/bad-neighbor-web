extends ../../layouts/default

block content
	.container: .jumbotron

		if articles && articles.length
			each article in articles
				h3: a(href="/article/" + article.key)= article.name
				a(href="/article/" + article.key): b
					| #{dateformat(article.createdAt, "dd mmmm yyyy")} | #{article.stats.replies} commentaires | Post√© par #{article.createdBy.username}
				hr
		else
			p Pas d'article, repassez plus tard !
