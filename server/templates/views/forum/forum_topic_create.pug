extends ../../layouts/default

block content
	#forum-page.container: .jumbotron

		include header

		h3=forum.name
		h5!=forum.description

		#forum-topic-create.alert
			div Ã‰crire un nouveau sujet
			hr

			.form-group
				label Sujet
				input(type='text' id="topic-field").form-control

			.form-group
				label Message
				textarea(rows=10 id="topic-content").form-control
			
			if forum.tags && forum.tags.length
				label Marqueur
				select.form-control(name='tag')
					option(value="none") Aucun
					each tag in forum.tags
						option(value=tag.id)= tag.name
			
			.form-actions
				button(id="draft-button" disabled).btn.btn-primary Sauvegarder le brouillon
				button(id="create-button" forumId=forum.id).btn.btn-primary Envoyer
		

