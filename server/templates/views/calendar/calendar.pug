extends ../../layouts/default

block content
	
	include calendar_add_popup

	include calendar_event_popup	
		
	.container: .jumbotron
		h2 Calendrier des BN
		.alert.alert-bn
			if user
				| Cliquez sur un événement pour en afficher les détails.
				br
				| Cliquez sur un emplacement vide pour créer un événement (si vous en avez les droits).
				br
				| Vous pouvez basculer entre #[a(href="/calendar?toAgenda=true") #[b la vue agenda]] et #[a(href="/calendar") #[b la vue calendrier]].
			else
				| N'étant pas connecté, vous ne verrez que les événements publics sur le calendrier.
				
		#bn_scheduler(class="dhx_cal_container" style='width:100%; height:500px;')
			.dhx_cal_navline
				.dhx_cal_prev_button &nbsp;
				.dhx_cal_next_button &nbsp;
				.dhx_cal_today_button
				.dhx_cal_date
				.dhx_cal_tab(name="month_tab")
				.dhx_cal_tab(name="agenda_tab")
			.dhx_cal_header
			.dhx_cal_data
				
block js
	link(rel="stylesheet" href="/bower_components/scheduler/codebase/dhtmlxscheduler.css" type="text/css")
	script(src="/bower_components/scheduler/codebase/dhtmlxscheduler.js" type="text/javascript")
	script(src="/bower_components/scheduler/codebase/ext/dhtmlxscheduler_agenda_view.js" type="text/javascript")
	script(src="/bower_components/scheduler/codebase/ext/dhtmlxscheduler_readonly.js" type="text/javascript")
	script(src="/bower_components/scheduler/codebase/locale/locale_fr.js" type="text/javascript")
	script(src="/bower_components/domurl/url.min.js")
		
	script
		| scheduler.bn_content = 
		!= JSON.stringify(data)
		| ;
		
	script(src="/bower_components/moment/min/moment.min.js" type="text/javascript")
	script(src="/bower_components/moment/locale/fr.js" type="text/javascript")
	link(rel="stylesheet" href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" type="text/css")
	script(src="/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js" type="text/javascript")
		
	script(src='/compiled/CalendarLogic_client.js')
